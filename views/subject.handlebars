{{!-- // This handlebars will make the particular Subject come into focus on the browser --}}
<div class="container">
  <h2 class="">{{subjectName}}</h2>
  <p class="">{{subjectInfo}}</p>
  <p class="">Created by {{user.name}} on {{format_date date_posted}}</p>
  {{#if logged_in}}
  <form class="form new-comment">
      <div class="form-group">
        <label for="post-content">Comments?</label>
        <textarea class="form-input px-2" id="comment-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-danger" data-id="{{id}}"> Post Comment</button>
      </div>
    </form>
    {{else}}
    <p>Please <a href="/login">login</a> to leave a Comment! </p>
  {{/if }}
</div>
{{!-- Comments display List --}}

  <div>
    <div class="ctxt comment-list">
      <h3 class="ctxt">Current Comments:</h3>
    {{#each commentData as |comment|}}
    <div class="row mb-2 ctxt">
      <div class="col-md-6">
        <p id='posted-comment'>{{comment}}</p>
        <p>Comment date:{{postDate}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<script src="/js/logout.js"></script>
<script src="/js/subject.js"></script>